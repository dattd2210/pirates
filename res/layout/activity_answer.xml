<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/background"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_check"
        android:layout_alignLeft="@+id/btn_check"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_answer1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_answer4"
        android:layout_marginTop="60dp"
        android:ems="10" />

    <Button
        android:id="@+id/btn_answer1"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_check"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_answer3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_answer1"
        android:layout_below="@+id/btn_answer1"
        android:layout_marginTop="16dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_answer4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btn_answer3"
        android:layout_toRightOf="@+id/btn_check"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_NumOfRemainQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_check"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_check"
        android:gravity="center_horizontal|top"
        android:textColor="#ff0000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_answer2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_answer3"
        android:layout_alignLeft="@+id/btn_answer4"
        android:textSize="14sp" />

</RelativeLayout>
